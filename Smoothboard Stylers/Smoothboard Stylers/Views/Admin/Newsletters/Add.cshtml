@using Microsoft.AspNetCore.Identity
@using Smoothboard_Stylers.Areas.Identity.Data

<a href="/Admin/Newsletters/">Back to Newsletters</a>

<form method="post" id="EditForm" asp-action="Create" asp-controller="NewsletterAdmin">
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Text</th>
            <th>HTML Mail</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><input class="form-control" type="text" name="Subject" form="EditForm" /></td>
            <td><textarea type="text" class="form-control" name="Text" form="EditForm"></textarea></td>
            <td>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="IsHtml" value="true" form="EditForm">
                    <input name="IsHtml" type="hidden" value="false" form="EditForm">
                </div>
            </td>
            <td>
                <button type="submit" asp-route-send="false" asp-action="Create" asp-controller="NewsletterAdmin" class="btn btn-outline-info" form="EditForm">Add</button>
                <button type="submit" asp-route-send="true" asp-action="Create" asp-controller="NewsletterAdmin" class="btn btn-outline-info" form="EditForm">Add & Send Newsletter</button>
            </td>
        </tr>
    </tbody>
</table>

